<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_profile_lnrSelectedUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_profile_lnrSelectedUser_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_profile_txtSelectedUser_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="@dimen/fragment_profile_txtSelectedUser_id_margin"
            android:padding="@dimen/fragment_profile_txtSelectedUser_id_padding"
            android:text="@string/fragment_profile_selected_user" />

        <TextView
            android:id="@+id/fragment_profile_txtSelectedUser_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="@dimen/fragment_profile_txtSelectedUser_name_margin"
            android:padding="@dimen/fragment_profile_txtSelectedUser_name_padding"
            android:text="@string/fragment_profile_selected_user" />

        <TextView
            android:id="@+id/fragment_profile_txtSelectedUser_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="@dimen/fragment_profile_txtSelectedUser_username_margin"
            android:padding="@dimen/fragment_profile_txtSelectedUser_username_padding"
            android:text="@string/fragment_profile_selected_user" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_profile_rcyUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_profile_lnrSelectedUser" />

</RelativeLayout>

